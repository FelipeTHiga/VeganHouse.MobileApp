<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileAdressData">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="57dp">
            <!--   Header     -->
            <RelativeLayout
                android:id="@+id/containerNavbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_back_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/profile_title"
                    android:textAlignment="center"
                    android:textColor="@color/pink"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--   Header     -->


            <!-- Menu -->
            <ImageButton
                android:id="@+id/btn_profile_data"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:background="@drawable/btn_bg_personal_data" />

            <ImageButton
                android:id="@+id/btn_profile_orders"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg_user_orders" />

            <ImageButton
                android:id="@+id/btn_profile_adress"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg_adress_data_selected" />
            <!-- Menu -->


            <TextView
                android:id="@+id/tv_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_profile_data"
                android:layout_marginTop="40dp"
                android:text="@string/adress"
                android:textColor="#604D4D"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_cep"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_section_title"
                android:layout_marginTop="20dp"
                android:hint="@string/cep"
                app:helperText="@string/required"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:hintTextColor="#604D4D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_state_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/container_et_cep">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/container_et_state"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/state"
                    app:helperText="@string/required"
                    app:helperTextTextColor="@android:color/holo_red_dark"
                    app:hintTextColor="#604D4D"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/container_et_city"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_et_state"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/city"
                    app:helperText="@string/required"
                    app:helperTextTextColor="@android:color/holo_red_dark"
                    app:hintTextColor="#604D4D"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_district"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_state_city"
                android:layout_marginTop="20dp"
                android:hint="@string/district"
                app:helperText="@string/required"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:hintTextColor="#604D4D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_district"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_street"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_et_district"
                android:layout_marginTop="20dp"
                android:hint="@string/street"
                app:helperText="@string/required"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:hintTextColor="#604D4D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_number_complement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/container_et_street">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/container_et_number"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/number"
                    app:helperText="@string/required"
                    app:helperTextTextColor="@android:color/holo_red_dark"
                    app:hintTextColor="#604D4D"
                    app:layout_constraintLeft_toLeftOf="@id/container_number_complement"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/container_et_complement"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/complement"
                    app:hintTextColor="#604D4D"
                    app:layout_constraintRight_toRightOf="@id/container_number_complement"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_complement"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_number_complement"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_rounded_format_white"
                android:text="@string/btn_save"
                android:theme="@style/Theme.ButtonPink"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_number_complement"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_rounded_format_white"
                android:text="@string/btn_update"
                android:theme="@style/Theme.ButtonPink"
                android:visibility="gone" />
        </RelativeLayout>

    </ScrollView>

</FrameLayout>