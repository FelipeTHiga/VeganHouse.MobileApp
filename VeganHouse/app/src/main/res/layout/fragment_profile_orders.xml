<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileOrders">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">
        <!--   Header     -->
        <RelativeLayout
            android:id="@+id/containerNavbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="20dp"
            >

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_arrow_back_pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Perfil"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--   Header     -->


        <!-- Menu -->
        <ImageButton
            android:id="@+id/btn_personal_data"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:background="@drawable/btn_bg_personal_data" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg_user_orders_selected" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg_adress_data" />
        <!-- Menu -->


        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_personal_data"
            android:layout_marginTop="40dp"
            android:text="Meus pedidos"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_marginTop="50dp"
            android:layout_below="@id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="350dp">

        </ScrollView>


    </RelativeLayout>

</FrameLayout>