<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileOrdersFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">
        <!--   Header     -->
        <RelativeLayout
            android:id="@+id/containerNavbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_arrow_back_pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/profile"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--   Header     -->


        <!-- Menu -->
        <ImageButton
            android:id="@+id/btn_profile_data"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:background="@drawable/btn_bg_personal_data" />

        <ImageButton
            android:id="@+id/btn_profile_orders"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg_user_orders_selected" />

        <ImageButton
            android:id="@+id/btn_profile_adress"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_below="@+id/containerNavbar"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg_adress_data" />
        <!-- Menu -->


        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_profile_data"
            android:layout_marginTop="40dp"
            android:text="@string/my_orders"
            android:textColor="#604D4D"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView_card_order_product"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/tv_section_title"
            android:layout_marginTop="30dp"
            android:scrollbars="none">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orders_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_section_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:indeterminate="true"
            android:indeterminateTint="#F8C8B8"
            android:visibility="gone"></ProgressBar>

        <TextView
            android:id="@+id/tv_default_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_section_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:textColor="#604D4D"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollView_card_order_product"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_rounded_format_white"
            android:onClick="registerUser"
            android:text="@string/btn_save"
            android:theme="@style/Theme.ButtonPink" />

    </RelativeLayout>

</FrameLayout>