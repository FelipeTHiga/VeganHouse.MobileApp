<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Product">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.ProductFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_menu_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/product_title"
                android:textColor="#F6A588"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/soap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_menu"></ImageView>

            <RelativeLayout
                android:id="@+id/rl_card_product"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                android:background="@drawable/rounded_container_white">

<!--                android:background="@drawable/rounded_container_white"-->

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/product_name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/tv_product_name"
                    android:text="@string/product_price"
                    android:textColor="#FF7272"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_product_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/product_seller"
                    android:textColor="#8D8A8A"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_product_price"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/tv_product_name"
                    android:src="@drawable/star"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_product_price"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/iv_star"
                    android:text="@string/product_score"
                    android:textColor="#8D8A8A"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_product_seller"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/product_description"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

                <Button
                    android:id="@+id/btn_add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FAB4B4"
                    android:text="@string/btn_add_cart"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"></Button>

                <TextView
                    android:id="@+id/tv_seller_certifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_cart"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/seller_certifications"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow_container_certifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/btn_add_cart"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/tv_seller_certifications" />

                <View
                    android:id="@+id/separator_line_certification"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/tv_seller_certifications"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="38dp"
                    android:background="#C4C4C4"></View>

                <RelativeLayout
                    android:id="@+id/rl_container_certification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator_line_certification"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:visibility="gone">
                        
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/certifications_component"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_seller_social_midia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_container_certification"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/seller_social_midias"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow_container_seller"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/rl_container_certification"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/tv_seller_social_midia" />

                <View
                    android:id="@+id/separator_line_seller"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/tv_seller_social_midia"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="38dp"
                    android:background="#C4C4C4"></View>

                <GridLayout
                    android:id="@+id/grid_container_seller_social_midia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator_line_seller"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:columnCount="3"
                    android:visibility="gone">

                    <RelativeLayout android:layout_gravity="start">

                        <ImageView
                            android:id="@+id/iv_icon_instagram"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/instagram" />

                        <TextView
                            android:id="@+id/tv_seller_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_icon_instagram"
                            android:layout_marginTop="7dp"
                            android:text="@string/seller_instagram"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/iv_icon_facebook"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/facebook" />

                        <TextView
                            android:id="@+id/tv_seller_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_icon_facebook"
                            android:layout_marginTop="7dp"
                            android:text="@string/seller_facebook"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_icon_whatsapp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/whatsapp" />

                        <TextView
                            android:id="@+id/tv_seller_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_icon_whatsapp"
                            android:layout_marginTop="7dp"
                            android:text="@string/seller_whatsapp"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </GridLayout>


            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</ScrollView>