<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfilePersonalData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="57dp">
            <!--   Header     -->
            <RelativeLayout
                android:id="@+id/containerNavbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_arrow_back_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/profile_title"
                    android:textAlignment="center"
                    android:textColor="@color/pink"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--   Header     -->

            <!-- Menu -->
            <ImageButton
                android:id="@+id/btn_profile_data"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:background="@drawable/btn_bg_personal_data_selected" />

            <ImageButton
                android:id="@+id/btn_profile_orders"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg_user_orders" />

            <ImageButton
                android:id="@+id/btn_profile_adress"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_below="@+id/containerNavbar"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg_adress_data" />
            <!-- Menu -->

            <TextView
                android:id="@+id/tv_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_profile_data"
                android:layout_marginTop="40dp"
                android:text="@string/personal_data"
                android:textColor="#604D4D"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_section_title"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:hint="@string/name"
                app:boxBackgroundColor="#CECECE"
                app:hintTextColor="#604D4D"
                app:startIconDrawable="@drawable/icon_user_brown">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_surname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_et_name"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:hint="@string/surname"
                app:boxBackgroundColor="#CECECE"
                app:hintTextColor="#604D4D"
                app:startIconDrawable="@drawable/icon_user_brown">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_et_surname"
                android:layout_marginTop="20dp"
                android:hint="@string/email"
                app:boxStrokeColor="#F5A4A4"
                app:hintTextColor="#604D4D"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/icon_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_et_cpf"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_et_email"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:hint="@string/cpf"
                app:boxBackgroundColor="#CECECE"
                app:hintTextColor="#604D4D"
                app:startIconDrawable="@drawable/icon_id_document_brown">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_et_cpf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_rounded_format_white"
                android:text="@string/btn_save"
                android:theme="@style/Theme.ButtonPink" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>