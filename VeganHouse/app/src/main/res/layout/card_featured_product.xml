<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/banner_product"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="3dp"
        android:padding="5dp"
        android:weightSum="100"
        app:cardCornerRadius="20dp"
        app:strokeColor="#C1C0C0"
        app:strokeWidth="0.5dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/rl_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="185dp"
                android:layout_height="180dp"/>

            <View
                android:id="@+id/separator_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C4C4C4"
                android:layout_toRightOf="@id/product_image"
                android:elevation="3dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/product_image"
                android:background="@drawable/banner_featured_product_bg">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:text="@string/product_name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_banner_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingRight="15dp"
                    android:text="@string/product_seller"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/product_certified"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/product_banner_seller"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/certificate_vegan" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_certified"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/product_certified"
                    android:padding="3dp"
                    android:text="@string/product_price"
                    android:textSize="12sp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>