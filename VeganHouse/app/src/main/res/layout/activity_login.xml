<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg_color"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">
        <!--   Header     -->
        <RelativeLayout
            android:id="@+id/containerNavbar"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--   Header     -->

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/containerNavbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="NÃ£o tem uma conta?"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:text="Toque em Cadastrar"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_subtitle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_login_bg"
            android:hint="E-mail"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:textColorHint="#604D4D"
            android:layout_marginTop="30dp"
            style="@style/CardView.Light"
            />

        <EditText
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_below="@id/et_email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_login_bg"
            android:hint="Senha"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:textColorHint="#604D4D"
            style="@style/CardView.Light"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_below="@id/et_password"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_rounded_format_white"
            app:shapeAppearanceOverlay="@drawable/btn_rounded_format_white"
            android:text="Entrar"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rounded_format_white"
            android:text="Cadastrar"
            android:theme="@style/Theme.ButtonPink" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>